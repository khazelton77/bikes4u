<% if signed_in? %>
<div class="form-heading">
  <h4>Add a review:</h4>
</div>
<div class="form-group">
  <%= form_for([@product, @product.comments.build], remote:true) do |f| %>
</div>
<div class="form-group">
  <p>
    <%= f.label :body, "Comments" %><br>
    <%= f.text_area :body %>
  </p>
</div>
<div class="form-group">
  <p>
    <div class="rating"></div>
  </p>
</div>
<div class="form-group">
  <p>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </p>
</div>
  <% end %>
<% end %>
