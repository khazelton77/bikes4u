
<% if signed_in? %>
  <h4 class="form-heading">Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote:true) do |f| %>
    <p>
      <div class="rating form-group"></div>
    </p>

    <p class="form-group">
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body %>
    </p>
    <p class="form-group">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </p>

  <% end %>
<% end %>
