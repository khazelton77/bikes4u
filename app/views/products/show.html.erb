
<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="row row-centered">
    <div class="col-xs-6 col-md-6 col-centered">
      <%= image_tag("#{@product.image_url}", class: "img-thumbnail img-zoom", data_zoom_image: "#{@product.image_url}") %>
    </div><!--/col-->
    <div class="col-xs-6 col-md-6 col-centered">
      <p>
        <strong>Name:</strong>
        <%= @product.name %>
      </p>
    </div><!--/col-->
    <div class="col-xs-6 col-md-6 col-centered">
      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>
    </div><!--/col-->
    <div class="col-xs-6 col-md-6 col-centered">
      <p>
	     <strong>Color:</strong>
	     <%= @product.color %>
      </p>
    </div><!--/col-->
    <div class="col-xs-6 col-md-6 col-centered">
      <p>
	     <strong>Price:</strong>
	     <%= @product.price %>
      </p>
    </div><!--/col-->
    <div class="col-xs-6 col-md-6 col-centered">
      <%= form_tag "/payments/create" do %>
        <%= render partial: "shared/stripe_checkout_button" %>
        <%= hidden_field_tag(:product_id, @product.id) %>
      <% end %>
    </div><!--/col-->
    <div class="col-xs-6 col-md-6 col-centered">
      <%= link_to 'Edit', edit_product_path(@product) %>
      <%= link_to 'Back', products_path %>
    </p>

  </div><!--/col-->
    <div class="col-xs-6 col-md-6 col-centered">
      <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div></p>
      <p>
    </div><!--/col-->
  </div><!--/row-->
  <div class="row">
    <div class="col-xs-6 col-md-6 col-centered">
      <p>
        <%= render 'new_comment' %>
      </p>
    </div><!--/col-->
    <div class="col-xs-6 col-md-6 col-centered">
      <p>
        <%= render 'comments' %>
    </div><!--/col-->

</div><!--/row-->
</div><!--/containter-fluid-->
<%= will_paginate @comments %>
