 <div class="container-fluid prodlist">
  <div class="row">
    <div class="col-xs-6 col-md-6">
      <%= image_tag(product.image_url, class: "img-thumbnail") %>
      </div>
      <div class="col-xs-6 col-md-6">
        <h1><%= link_to product.name, product %></h1>
        <p><%= product.description %></p>
        <p><%= product.color %></p>
        <p><%= product.price %></p>
        <p><%= link_to 'Show', product %></p>
        <p><%= link_to 'Edit', edit_product_path(product) %></p>
        <p><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        </div>
      </div>
    </div>
  </div>
</div>