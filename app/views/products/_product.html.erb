<% cache product do %>
<div class="container-fluid">
	<div class="row row-centered ind-prod">
		<div class="col-xs-6 col-md-6 col-centered">
			<%= image_tag(product.image_url, class: "img-thumbnail") %>
		</div><!-- /col -->
		<div class="col-xs-6 col-md-6 col-centered">
			<h1><%= link_to product.name, product %></h1>
		</div><!-- /col -->
		<div class="col-xs-6 col-md-6 col-centered">
			<p><%= product.description %></p>
		</div><!-- /col -->
		<div class="col-xs-6 col-md-6 col-centered">
			<p><%= product.color %></p>
		</div><!-- /col -->
		<div class="col-xs-6 col-md-6 col-centered">
			<p><%= product.price %></p>
		</div><!-- /col -->
		<div class="col-xs-6 col-md-6 col-centered">
			<p><%= link_to 'Show', product %></p>
		</div><!-- /col -->
		<div class="col-xs-6 col-md-6 col-centered">
			<p><%= link_to 'Edit', edit_product_path(product) %></p>
		</div><!-- /col -->
		<div class="col-xs-6 col-md-6 col-centered">
			<p><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
		</div><!-- /col -->
	</div> <!-- /row -->
</div><!-- /container-fluid -->
<% end %>
